<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="warn">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss} - %r [%t] %-5p %c{1} - %m%n</Pattern>
			</PatternLayout>
		</Console>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<Appender-Ref ref="Console"/>
		</Root>
	</Loggers>
</Configuration>
